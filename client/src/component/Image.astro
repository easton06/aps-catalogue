---
const {entry, width} = Astro.props;

let caption = undefined;
let entryArr = entry.split("(");
let image = entryArr[0];
if (entryArr.length > 1) {
  caption = entryArr[1].slice(0, -1);
}
---

<span class={`-z-10 relative rounded-xl h-40 outline outline-2 outline-indigo-900`} style={`width: ${width?? "10rem"}`}>
  <div class="absolute right-0 left-0 bottom-1 text-center">
    {caption}
  </div>
  <img class={`object-center ${caption? "h-36" : "h-40"} object-contain`} style={`width: ${width?? "10rem"}`} src={"https://drive.google.com/uc?export=view&id=" + image} alt={entry}>
</span>